[
    {
        "defaults": {
            "link": {
		"create": true,
                "relink": false
            }
        }
    },
    {
        "shell": [
	    ["mkdir ~/.vim; mkdir ~/.vim/bundle", "Preparing vim directories..."],
	    ["git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim", "Downloading Vundle..."]
	]
    },
    {
        "link": {
            "~/.vimrc": ".vimrc",
            "~/.zshrc": ".zshrc"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules..."],
	    ["vim +PluginInstall +qall", "Installing Vim plugins..."],
	    ["echo 'colorscheme solarized' >> .vimrc", "Setting vim color scheme..."],
	    ["sudo apt-get install zsh", "Installing zsh..."],
	    ["sudo apt-get install git-core", "Installing git-core..."],
	    ["sh -c '$(wget https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)'", "Installing oh-my-zsh..."]
        ]
    }
]
